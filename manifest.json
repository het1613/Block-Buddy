{
    "manifest_version": 2,
    "name": "Block Buddy",
    "version": "0.0.1",
    "description": "A simple extension to boost productivity by blocking social media sites during study/work hours.",
    "content_scripts": [
        {
            "matches":["<all_urls>"],
            "js": ["app.js"]
        }
    ],
    "icons": { "48": "icon.png", "128": "icon.png" },
    "permissions": [
        "storage"
    ],
    "browser_action": {
        "default_popup": "Popup.html",
        "default_title": "Block Buddy"
    }
}